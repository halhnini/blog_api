<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{% endblock title %}</title>
</head>
<body bgcolor="#CCCCCC" leftmargin="0" topmargin="0" marginwidth="0" marginheight="0" align="center"
      style="background-color:#CCCCCC;text-align:center;">
<table cellspacing="0" cellpadding="0" border="0" style="background-color:#FFFFFF;width:640px;cursor:default;"
       align="center">
    {# Header #}
    <tr>
        <td style="width:640px;padding-top:10px;text-align:center;" align="center">
            <table cellspacing="0" cellpadding="0" border="0" style="width:620px;" align="center">
                <tr>
                    <td style="vertical-align:top;text-align: center;">
                        <a href="{{ unionClientUrl }}" target="_blank"
                           style="color:#FF9D00;text-decoration:none;border:0;">
                        </a>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    {# Body #}
    <tr>
        <td style="width:640px;text-align:left;padding:20px 10px 0px 10px;" align="center">
            <div style="height:1px;width:275px;background-color:#5a5a5a;text-align: center;margin-top: 10%;margin-left: auto; margin-right: auto;"></div>
            <div style="font-family:Open Sans, Helvetica Neue, Helvetica, Arial, sans-serif;color:#00648e;font-size:13px;padding:20px 10px 20px 10px;">
                <br><br>
                {% block mail_body %}{% endblock mail_body %}
                <br><br>
            </div>
            <div style="height:1px;width:275px;background-color:#5a5a5a;text-align: center;margin-bottom: 10%;margin-left: auto; margin-right: auto;"></div>
        </td>
    </tr>
    {# Footer #}
    <tr>
        <td style="width:640px;font-family:Open Sans, Helvetica Neue, Helvetica, Arial, sans-serif;font-size:12px;color:#6A6A6A;text-align:center;padding:10px 0 10px 0;">
            Copyright © 2020 Blog, Tous droits réservés.
        </td>
    </tr>
    <tr>
        <td style="width:640px;font-family:Open Sans, Helvetica Neue, Helvetica, Arial, sans-serif;font-size:11px;color:#6A6A6A;text-align:center;padding-bottom:30px;">
            {% block mail_unsubscribe %}
                <a href="#"
                   style="text-decoration:none;color:#6A6A6A;">se désinscrire</a>
            {% endblock mail_unsubscribe %}
        </td>
    </tr>
    <tr>
        <td style="width:640px;background-color:#CCCCCC;"></td>
    </tr>
</table>
</body>
</html>
